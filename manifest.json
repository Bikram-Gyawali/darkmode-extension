{
  "name": "darkmode",
  "version": "1.0",
  "manifest_version": 2,
  "description": "simple light mode changing tool",
  "background": {
    "scripts": ["popup.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "darkmode",
    "default_popup": "popup.html"
  },
  "permissions": ["https://*/*", "http://*/*", "tabs"]
}
